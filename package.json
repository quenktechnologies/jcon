{
  "name": "jcon",
  "version": "0.0.1",
  "description": "JavaScript Configuration Object Notation",
  "main": "index.js",
  "scripts": {
    "clean": "rm -R lib/*",
    "dist": "cd lib && npm publish",
    "dist:test": "rm -R node_modules/jcon; cp -R lib node_modules/jcon; cp package.json lib/package.json",
    "build": "npm run -s clean; npm run -s build:parser && npm run -s build:src && npm run -s build:package",
    "build:parser": "./node_modules/.bin/jison -o src/Parser.js src/jcon.y && cp src/Parser.js lib/Parser.js",
    "build:src": "tsc -p src",
    "build:package": "cp --remove-destination package.json lib/package.json",
    "test": "npm run -s dist:test; ./node_modules/.bin/mocha --opts mocha.opts test"
  },
  "author": "Lasana Murray <dev@quenk.com> (http://quenk.com)",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/mocha": "^2.2.41",
    "@types/node": "^7.0.18",
    "jison": "^0.4.17",
    "mocha": "^3.3.0",
    "must": "^0.13.4",
    "ts-node": "^3.0.4",
    "typescript": "^2.3.2"
  },
  "dependencies": {
    "afpl": "0.0.4",
    "docopt": "^0.6.2",
    "fluture": "^5.0.0",
    "source-map-support": "^0.4.15"
  }
}
